@using System.Configuration
@using System.Web.Optimization;
@using Volvo.NVS.Utilities.Web.Messaging
@using Volvo.NVS.Utilities.Web.Extensions
@using Volvo.NVS.Utilities.Web.Localization
@using Volvo.LAT.MVCWebUIComponent.Common.Extensions

<!DOCTYPE html>

<html>
<head>
    <!-- disable compatibility view, regardless of user settings -->
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>@ViewBag.Title</title>
    <style>
        * {
            font-family: Arial, Verdana, Helvetica, sans-serif;
            font-size: 11px;
            color: #000000;
            text-align: left;
            margin: 0 0 10px 1px;
            padding: 0;
        }

        html {
            background: #ffffff scroll left top;
        }

        body {
            background: transparent scroll right top;
        }

        #nvsSurroundingArea {
            background: #ff0000;
        }

        #nvsContent {
            border: 0 !important;
            padding: 0 !important;
        }

        #nvsVersion {
            margin-right: 19px;
        }

        #nvsLegal {
            margin-left: 19px;
        }

        #nvsBody {
            border: 0 !important;
            padding: 1px 0 0 0 !important;
        }

        h1 {
            font-weight: bold;
            font-size: 23px;
            line-height: 23px;
        }

            h1 a {
                font-weight: bold;
                font-size: 23px;
                line-height: 23px;
                text-decoration: none;
            }

        h2.error {
            font-weight: bold;
            font-size: 18px;
        }

        .field {
            font-size: 15px;
        }
    </style>
</head>
<body>
    <div id="nvsMainWindow">
        <div id="nvsHeader">
            <div id="nvsSurroundingArea">
                <h1><a href="@Url.Action("Index", "Home")">NVS Parts Ordering System</a></h1>
            </div>
        </div>

        <h2 class="error">@CommonResource.Error_Catastrophic</h2>

        <div id="nvsContent">
            <div id="nvsBody">
                @RenderBody()
            </div>
        </div>
        <div id="nvsFooter">
            <span id="nvsVersion">@CommonResource.Layout_Version - @(Html.GetAssemblyInformation())</span>
            <span id="nvsLegal">@CommonResource.Layout_Legal</span>
        </div>
    </div>
</body>
</html>