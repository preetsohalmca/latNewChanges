@using Volvo.LAT.POLineDomain.DomainLayer.Entities;
@model dynamic
@{
    ViewBag.Title = "POLineSearch";
}
  
 <div class="group">
    <h3 class="nvs">Search Bar</h3>
     
    <div style="margin: 5px;">
        <span class="field">
            <label class="field" for="SearchInput">@*POLine:*@</label>
            <input type="text" id="SearchInput" style="width:400px"/>
            <input type="button" id="SearchButton"   title="POSearch" value="Search">
            <input type="button" id="AdvancedSearchButton" title="POSearch" value="Search" style="display:none;">
            <a href="#" id="Advance">Advance Search</a>
        </span>
    </div>
    <div id="DivAdvancesearch" style="visibility:hidden" >
        <table>
            <tr>
                <td colspan="4">
                    StartDate:    @(Html.Kendo().DatePicker()
              .Name("StartDate")
              .Min(DateTime.Now.AddDays(-88))
              .Max(DateTime.Now.AddDays(88))
              .Value(DateTime.Now)
                    )
                    </td>
                <td>
                    EndDate:   @(Html.Kendo().DatePicker()
              .Name("EndDate")
              .Min(DateTime.Now.AddDays(-88))
              .Max(DateTime.Now.AddDays(88))
              .Value(DateTime.Now)
                    )
                </td>
                <td>
                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("EBS")
              .DataSource(source => source.Read(read => read.Action("GetOwnerName", "POLine")))
              .SelectedIndex(8)
                    )
                </td>
                <td>
                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("Requestor")

              .SelectedIndex(8)
                    )
                </td>
            </tr>
            <tr>
                <td colspan="3">
                    EndDate:   @(Html.Kendo().DatePicker()
              .Name("EndDate")
              .Min(DateTime.Now.AddDays(-88))
              .Max(DateTime.Now.AddDays(88))
              .Value(DateTime.Now)
                    )
                </td>
                <td>
                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("Applicationname")

              .SelectedIndex(8)
                    )
                </td>





                <td>

                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("WBS")

              .SelectedIndex(8)
                    )
                </td>
            </tr>
            <tr>
                <td colspan="3"></td>
                <td>
                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("ContractType")

              .SelectedIndex(8)
                    )
                </td>

                <td>
                    <hr class="nvs">
                    @(Html.Kendo().DropDownList()
              .Name("AssignmentCode")

              .SelectedIndex(8)
                    )
                </td>
                <td>
                    <input type="reset" value="clear"   id="btnClear" />
                </td>
            </tr>
        </table>
    </div>
</div>

@(Html.Kendo().Grid<POLine>()
        .Name("grida")
        .DataSource(dataSource => dataSource
            .Ajax()
            .Model(model => model.Id(p => p.Id))
            .Read(read => read.Action("POLineGridRead", "POLine")) 
            .PageSize(10)
        )        
        .Columns(columns =>
        {
            columns.Bound(o => o.PoLine).Title("POLine");
            columns.Bound(o => o.StartDate).Title("StartDate");
            columns.Bound(o => o.EndDate).Title("EndDate");
            //columns.Bound(o => o.contractType).Title("contractType");
        })
        .Selectable()
        .Sortable()
        .Pageable(p => p.Input(true).Refresh(true).PageSizes(new[] { 2, 5, 10, 100 }))
        .AutoBind(false)
        .Scrollable(x => x.Enabled(false))
         
)

