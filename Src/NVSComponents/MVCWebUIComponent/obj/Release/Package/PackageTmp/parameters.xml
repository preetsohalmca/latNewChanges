<parameters>
  <!--Web.config-->
  <parameter name="Environment" defaultValue="__Environment__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="/configuration/appSettings/add[@key='Environment']/@value" />
  </parameter>
  <parameter name="WMSQueue" defaultValue="__WMSQueue__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="//*[@name='WMSQueue']/@uri" />
  </parameter>
  <parameter name="WMSRequestQueue" defaultValue="__WMSRequestQueue__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="//*[@name='WMSRequestQueue']/@uri" />
  </parameter>

  <!-- A true/false flag saying if Ping should be used or Integrated Windows Authentication (false) -->
  <parameter name="UsePing" defaultValue="__UsePing__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="/configuration/appSettings/add[@key='UsePing']/@value" />
  </parameter>
  
  <!-- A 'native' authentication module to be configured and used by the application -->
  <parameter name="AuthenticationMode" defaultValue="__AuthenticationMode__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="/configuration/system.web/authentication/@mode" />
  </parameter>
  
  <!-- For connection string transformations we must use the default 'dirty' name generated by the
    web deploy, according to the link below:
    http://killspice.blogspot.com.br/2014/02/web-deploy-ms-deploy-connection-string.html  -->
  <parameter name="LATDbConnectionString-Web.config Connection String" defaultValue="__ConnectionString__">
    <parameterEntry kind="XmlFile"
                         scope="Web\.config$"
                         match="//connectionStrings/add[@name='LATDbConnectionString']/@connectionString" />
  </parameter>
  <!--/Web.config-->

  <!--Entlib.config-->
  <parameter name="NVSInfoListener" defaultValue="__NVSInfoListener__">
    <parameterEntry kind="XmlFile"
                         scope="Entlib\.config$"
                         match="/configuration/loggingConfiguration/listeners/add[@name='NVSInfoListener']/@fileName" />
  </parameter>
  <parameter name="NVSErrorListener" defaultValue="__NVSErrorListener__">
    <parameterEntry kind="XmlFile"
                         scope="Entlib\.config$"
                         match="//*[@name='NVSErrorListener']/@fileName" />
  </parameter>
  <!--/Entlib.config-->

  <!--NHibernate.config-->
  <!-- The connection string has been moved to the web.config because it is shared between nHibernate and Telerik Reporting engine.
       If you want to have the connection string again in the NHibernate.config file (as a separate one, or replacing the one 
       from web.config) you can uncomment the transformation below and comment the one above for 'LATDbConnectionString'.
  -->
  <!--
  <parameter name="connection.connection_string" defaultValue="__ConnectionString__">
    <parameterEntry kind="XmlFile"
                         scope="NHibernate\.config$"
                         match="//*[@name='connection.connection_string']/text()" />


  </parameter>-->
  <!--/NHibernate.config-->
</parameters>

