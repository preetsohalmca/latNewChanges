      </assemblies>
    </compilation>
    <!-- By default the Integrated Windows Authentication is used and no Ping is utilized. The UsePing app setting should then also be set to false. -->
    <authentication mode="Windows" />
    <!-- Allow all Windows Authenticated to continue. The CheckAccess attributes will -->
    <!-- will decide what should happen and it will be decided during the NVS authorization -->
    <authorization>
      <allow users="*" />
    </authorization>
    <!-- Cookies should never be available from the java script -->
    <httpCookies httpOnlyCookies="true" />
    <!-- To enable viewing error messages on in the webapp running on the server -->
    <customErrors mode="Off" />
    <!--<compilation debug="true"/>-->
    <pages controlRenderingCompatibilityVersion="3.5" clientIDMode="AutoID">
      <namespaces>
        <add namespace="System.Web.Helpers" />
        <add namespace="System.Web.Mvc" />
        <add namespace="System.Web.Mvc.Ajax" />
        <add namespace="System.Web.Mvc.Html" />
