    <section name="volvo.nvs.integration" type="Volvo.NVS.Integration.Configuration.IntegrationSection, Volvo.NVS.Integration" />
    <section name="hibernate-configuration" type="NHibernate.Cfg.ConfigurationSectionHandler, NHibernate" />
    <!-- To allow NHibernate mapping by code-->
    <section name="nhibernate.mappingbycode" type="Volvo.NVS.Persistence.NHibernate.Config.NHibernateMappingSection, Volvo.NVS.Persistence.NHibernate" />
    <section name="volvo.nvs.security" type="Volvo.NVS.Security.Configuration.Sections.RootSection, Volvo.NVS.Security" requirePermission="false" />
  </configSections>
 
  <!-- LAT database connection settings -->
  <connectionStrings>
     <!--<add name="LATDbConnectionString" connectionString="Data Source=segotn14365.rds.volvo.com\SQL1;Initial Catalog=LAT_IT_Phase_II_qa;Integrated Security=True" providerName="System.Data.SqlClient" />-->

    <add name="LATDbConnectionString" connectionString="Data Source=INBLRWIT043838B\SQL2014;;Initial Catalog=LAT_Test_new;Integrated Security=True" providerName="System.Data.SqlClient" />
    </connectionStrings>
  <!-- NHibernate Configuration -->
  <hibernate-configuration configSource="NHibernate.config" />
  <!-- Add assemblies having the mapping code for the NHibernate. Those will be scanned by the Persistency Library -->
  <nhibernate.mappingbycode>
    <mappings> 
      <add assembly="UserDomain.Infrastructure" />
      <add assembly="POLineDomain.Infrastructure" />
    </mappings>
  </nhibernate.mappingbycode>
  
  <volvo.nvs.security>
    <!-- Do not automatically add Security Modules into the ASP.NET pipeline. 
    We will add them manually depending if Ping should be used or not -->
    <web IsAutomaticAppStartupEnabled="false" />
  </volvo.nvs.security>
  
  <!-- Common Application Settings -->
  <appSettings>
    <add key="ClientValidationEnabled" value="true" />
    <add key="UnobtrusiveJavaScriptEnabled" value="true" />
    <add key="Environment" value="Local" />
    <add key="microsoft.visualstudio.teamsystems.backupinfo" value="6;web.config.backup" />
    <add key="webpages:Version" value="3.0.0.0" />
    <add key="PreserveLoginUrl" value="true" />
    <add key="AvailableCultures" value="en-US;pt-BR" />
    <add key="poolSize" value="50" />
    <add key="LoggingStatus" value="OFF" />
